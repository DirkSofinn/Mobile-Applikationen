<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TitelHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hilfe"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="30dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fragezeichen"
            android:alpha="0.25"
            />

        <TextView
            android:id="@+id/HilfeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Mit dieser App können Sie die wahrscheinliche spätere Körpergröße eines Kindes anhand der Körpergröße der Eltern berechnen. Geben Sie dazu die nötigen Werte in die vorgegeben Zeilen ein und wählen Sie das Geschlecht des Kindes aus. Klicken Sie dann auf -Jetzt berechnen- um das Ergebnis anzuzeigen. Drücken Sie auf -weiterer Eintrag- um wieder auf den Startbildschirm zu kommen. Mit der Listenübersicht können Sie sich einen Überblick über die bisherigen Berechnungen verschaffen und auch einzelne Einträge wieder entfernen."
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_centerVertical="true"/>

        <!--<Button
            android:id="@+id/ButtonHauptseite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:text="Hauptseite"
            />-->
    </RelativeLayout>

</LinearLayout>